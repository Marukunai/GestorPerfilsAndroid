<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallPerfilActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetall"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/ivFotoPerfilDetall"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDetall"
        android:contentDescription="Imatge de perfil gran" />

    <TextView
        android:id="@+id/tvEtiquetaNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="Nom:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFotoPerfilDetall" />

    <TextView
        android:id="@+id/tvDetallNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEtiquetaNom"
        app:layout_constraintTop_toTopOf="@id/tvEtiquetaNom"
        tools:text="Anna GarcÃ­a (28 anys)" />

    <TextView
        android:id="@+id/tvEtiquetaEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="@id/tvEtiquetaNom"
        app:layout_constraintTop_toBottomOf="@id/tvDetallNom" />

    <EditText
        android:id="@+id/etDetallEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:background="@android:color/transparent"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEtiquetaEmail"
        app:layout_constraintTop_toTopOf="@id/tvEtiquetaEmail"
        tools:text="anna.garcia@exemple.com" />

    <TextView
        android:id="@+id/tvEtiquetaImatgeUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="URL Imatge:"
        app:layout_constraintStart_toStartOf="@id/tvEtiquetaEmail"
        app:layout_constraintTop_toBottomOf="@id/etDetallEmail" />

    <EditText
        android:id="@+id/etDetallImatgeUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:inputType="textUri"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@android:color/transparent"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEtiquetaImatgeUrl"
        app:layout_constraintTop_toTopOf="@id/tvEtiquetaImatgeUrl"
        tools:text="http://exemple.com/foto.jpg" />

    <TextView
        android:id="@+id/tvEtiquetaEstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Estat:"
        app:layout_constraintStart_toStartOf="@id/tvEtiquetaImatgeUrl"
        app:layout_constraintTop_toBottomOf="@id/etDetallImatgeUrl" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swDetallEstat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textOff="Inactiu"
        android:textOn="Actiu"
        android:checked="false"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEtiquetaEstat"
        app:layout_constraintTop_toTopOf="@id/tvEtiquetaEstat" />

    <Button
        android:id="@+id/btnGuardarCanvis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="GUARDAR CANVIS"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swDetallEstat" />

    <Button
        android:id="@+id/btnEliminarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="ELIMINAR PERFIL"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGuardarCanvis" />

</androidx.constraintlayout.widget.ConstraintLayout>